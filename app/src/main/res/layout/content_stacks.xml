<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".Stacks">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STACKS"
                android:textSize="20sp"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                android:layout_marginBottom="5dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stackdesc"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:typeface="normal"
                android:textColor="#000000" />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#0d1229">
                <TextView
                    android:id="@+id/stackcode1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="gravity"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="start" />

            </LinearLayout>




            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1"
                android:layout_margin="5dp"
                android:divider="#151313">
                <TableRow>
                    <TextView
                        android:text="Position Of the Stack"
                        android:padding="3dip"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
                    <TextView
                        android:text="Status of Stack"
                        android:gravity="right"
                        android:padding="3dip"
                        android:textSize="18sp"
                        android:textColor="#080808"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="-1"
                        android:gravity="center"
                        android:padding="3dip"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="Stack is empty"
                        android:gravity="center"
                        android:padding="3dip"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="0"
                        android:gravity="center"
                        android:padding="3dip"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="Only one element"
                        android:gravity="center"
                        android:padding="3dip"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="N-1"
                        android:gravity="center"
                        android:padding="3dip"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="Stack is full"
                        android:gravity="center"
                        android:padding="3dip"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="N"
                        android:gravity="center"
                        android:padding="3dip"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="Overflow state"
                        android:gravity="center"
                        android:padding="3dip"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stackcomplexity"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="18sp"
                />





        </LinearLayout>
    </ScrollView>



</RelativeLayout>